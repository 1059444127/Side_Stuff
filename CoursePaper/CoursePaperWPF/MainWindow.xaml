<Window x:Class="CoursePaperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="525">
    <TabControl ClipToBounds="True" UseLayoutRounding="True" Grid.IsSharedSizeScope="True">
        <TabItem Header="Login">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem Header="Register">
            <Grid Background="#FFE5E5E5">
                <Label Content="Username&#xD;&#xA;" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="75" Margin="20,20,0,0" FontWeight="Bold"/>
                <TextBox Name="UsernameBox" HorizontalAlignment="Left" Height="21" Margin="25,50,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="103"/>
                <Label Content="Password" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="25,110,0,0" VerticalAlignment="Top" Width="103" Password="password"/>
                <Button Content="Register" HorizontalAlignment="Left" Margin="259,205,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
